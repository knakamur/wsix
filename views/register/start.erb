<script type="text/javascript" src="/js/md5-min.js"></script>
<script type="text/javascript" src="/js/register.js"></script>
<link rel="stylesheet" href="/css/register.css">

<div id="form">

  <p>we want you to come to portland and have fun.
  so, fill in the things...
  there's a few steps, don't worry: it's easy.</p>

  <span class="errors" id="errors"><%= @errors %></span>

  <table class="tab">
    <tr>
      <td class="tab">
        <a class="tab active" id="showStart" onclick="snh('Start','Login');">first time registration</a>
      </td>
      <td class="tab">or</td>
      <td class="tab">
        <a class="tab inactive" id="showLogin" onclick="snh('Login','Start');">login to make changes or pay</a>
      </td>
    </tr>
  </table>

  <br/>
  <br/>

  <div id="registerStart">

    <form name="registerStart" action="/register/start" method="post" onsubmit="return submitDance(this);">
  
      <table>
  
        <tr>
          <th>email address: </th>
          <td>
            <input type="text" name="email">
          </td>
        </tr>
  
        <tr>
          <th>password thing: </th>
          <td>
            <input type="password" name="password">
          </td>
        </tr>
  
        <tr>
          <th>password again: </th>
          <td>
            <input type="password" name="pw_conf">
          </td>
        </tr>
  
        <tr>
          <th colspan="2">
            <input type="submit" value="start registration!">
          </th>
        </tr>
  
      </table>
  
      <input type="hidden" name="password_hash" value="">
      <input type="hidden" name="password_salt" value="<%= @password_salt %>">
  
    </form>
  
    <script type="text/javascript">
      //<![CDATA[
      document.registerStart.email.focus();
      //]]>
    </script>

  </div>

  <div id="registerLogin">

    <form name="registerLogin" action="/register/login" method="get">

      <table>
        <tr>
          <th>email address: </th>
          <td><input type="text" name="email"></td>
        </tr>
        <tr>
          <th colspan="2"><input type="submit" value="login!"></th>
        </tr>
      </table>

    </form>

  </div>

</div>

<script type="text/javascript">
//<![CDATA[
  onLoaders.push(function() {
    $('registerLogin').hide();
    // $('showLogin').style.color = "#aaa";
  });
//]]>
</script>
